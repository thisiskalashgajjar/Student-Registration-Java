<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="root" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <GridPane fx:id="gridPane" hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label text="Student Number:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <TextField fx:id="txt1" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Label text="Course Name:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <ComboBox fx:id="courseName" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Label text="Class Preference:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <HBox fx:id="preferenceRadioButtons" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Label text="Are you an International Student?" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <CheckBox fx:id="studentstatus" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <Label text="Enter your Email ID:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <TextField fx:id="txt2" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                <HBox fx:id="hBox" alignment="CENTER" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="5">
                    <children>
                        <Button fx:id="registerButton" mnemonicParsing="false" text="Register" />
                        <Button fx:id="modifyButton" mnemonicParsing="false" text="Modify" />
                        <Button fx:id="deleteButton" mnemonicParsing="false" text="Delete" />
                    </children>
                </HBox>
            </children>
        </GridPane>
    </center>
</BorderPane>
